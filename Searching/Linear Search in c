#include <stdio.h>

int main()
{
    int n, i=0, item;
    printf("\n LINEAR SEARCH");
    printf("\n Enter the size of the array : ");
    scanf("%d",&n);
    int a[n];
    printf("\n Enter the array elements : \n");
    for(i=0;i<n;i++){
        scanf("%d",&a[i]);
    }
    
    printf("\n Enter the item to search : ");
    scanf("%d",&item);
    
    for(i=0;i<n;i++){
        if(a[i]==item){
            printf("\n Searched Item is in position: %d", i+1);
            return 0;
        }
    }
    printf("\n No such item in the given array");

    return 0;
}
